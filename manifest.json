{
  "manifest_version": 3,
  "name": "Chrome Typing Bot",
  "version": "1.0.0",
  "description": "Автоматизация игры в печать на сайте spritetype.irys.xyz",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "debugger"
  ],
  
  "host_permissions": [
    "https://spritetype.irys.xyz/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://spritetype.irys.xyz/*"],
      "js": [
        "modules/wordParser.js",
        "modules/typingEngine.js", 
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Typing Bot",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*.js"],
      "matches": ["https://spritetype.irys.xyz/*"]
    }
  ]
}